<div class="all_goals">
<div class="col-lg-4">
<% @cur_goals= @goals_past %>
<% @header = 'Вчера '%>
<%= render 'goals'%>
</div>

<div class="col-lg-4" >
<% @cur_goals= @goals_today %>
<% @header = 'Сегодня '%>
<div id='goals_today'> 
  <%= render 'goals'%>
</div>

<%= form_for(@goal) do |f| %>
<%= f.hidden_field :start_date, value: Date.today %>
<div class="itemAdd_form">
  <div class="inp left w260"><%= f.text_field :name, :class => 'txt' %>
  </div>
  <span class="sub btn btn-min2 btn-success mrg_l right" id="btn-send"> Добавить</span>
</div>

<% end %>
</div>

<div class="col-lg-4">
<% @cur_goals= @goals_next %>
<% @header = 'Завтра '%>
<%= render 'goals'%>
</div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th>Fixed</th>
      <th>Personal</th>
      <th>Start date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
    <tr>
      <td><%= goal.name %></td>
      <td><%= goal.description %></td>
      <td><%= goal.user_id %></td>
      <td><%= goal.fixed %></td>
      <td><%= goal.personal %></td>
      <td><%= goal.start_date %></td>
      <td><%= link_to 'Show', goal %></td>
      <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
      <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая задача', new_goal_path, class: 'btn btn-success' %>
