  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>

<div class="container-all">

<% if current_user %>
  <%= render "menu" %>
<% end %>


<div class="container bs-docs-container">

<div class="js-notes has-note">
